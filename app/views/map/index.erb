<div id="map-canvas"></div>

<div class="sidebar">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="form-horizontal">
          <div class="form-group filters-section">
            <label class="col-sm-2 control-label text-left">Search</label>
            <div class="col-sm-10">
              <input type="text" id="place-search" class="form-control" placeholder="Search photos by location..." />
            </div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <form class="form-horizontal" role="form">
          <div class="form-group filters-section">
            <label for="inputEmail3" class="col-sm-2 control-label text-left">Distance</label>
            <div class="col-sm-10">
              <div id="radius-slider" data-radius="40">
                <div id="slider"></div>
                <p class="min-radius">
                  <span class="text-muted">RADIUS:</span>
                  <input type="text" readonly id="radius" class="bold" value="100" placeholder="40 KM"/>
                </p>
              </div>
            </div>
          </div>
        </form>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="form-horizontal">
          <div class="form-group filters-section">
            <label class="col-sm-2 control-label text-left">Options</label>
            <div class="col-sm-10">
              <div class="btn-group btn-group-justified">
                <div class="btn-group">
                  <button type="button" id="clear-markers" class="btn btn-default">
                    <i class="fa fa-map-marker"></i> Clear
                  </button>
                </div><!-- .btn-group -->
                <div class="btn-group">
                  <button type="button" class="btn btn-default">
                    <i class="fa fa-heart"></i> Faves
                  </button>
                </div><!-- .btn-group -->
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="mtm">
      <div id="result" class="row row-10-gutter"></div><!-- .row -->
    </div><!-- .mtm -->

  </div>
</div>